{
  "name": "playmaster",
  "version": "0.0.0",
  "description": "evolition.io presents playmaster, your table top roleplaying character manager",
  "main": "app/",
  "directories": {
    "doc": "docs"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 6.0.0"
  },
  "build": {
    "appId": "io.ev.playmaster",
    "build.mac.category": "entertainment.utilities.games",
    "win": {
      "iconUrl": "http://eatodo.s3.amazonaws.com/icon.ico"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "clean": "rm -rf ./dist",
    "dist": "electron-packager ./ Playmaster --arch=x64 --out=dist",
    "mac-dist": "npm run clean && NODE_ENV=production build -m --x64",
    "win-dist": "NODE_ENV=production build -w --x64",
    "pack:osx": "npm run clean && electron-packager . \"Playmaster\" --arch=x64 --out=dist/osx --platform=darwin",
    "start": "babel-node scripts/ development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolition/playmaster.git"
  },
  "bugs": {
    "url": "https://github.com/evolition/playmaster/issues"
  },
  "keywords": [
    "rpg",
    "dnd",
    "game"
  ],
  "contributors": [
    {
      "email": "kevin@evolition.io",
      "name": "Kevin Carr"
    },
    {
      "email": "josh@evolition.io",
      "name": "Joshua Owens"
    }
  ],
  "author": "Evolition",
  "license": "Apache-2.0",
  "copyright": "Copyright (c) 2016, Evolition, LLC. All rights reserved.",
  "homepage": "https://github.com/evolition/playmaster#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-preset-es2017": "^1.6.1",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.14.0",
    "electron": "^1.4.4",
    "electron-builder": "^8.6.0",
    "electron-compilers": "^4.0.2",
    "electron-packager": "^8.1.0",
    "eslint": "^3.2.2",
    "spectron": "^3.3.0"
  }
}
