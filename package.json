{
  "name": "playmaster",
  "version": "0.0.0",
  "description": "evolition.io presents playmaster, your table top roleplaying character manager",
  "main": "app/",
  "directories": {
    "doc": "docs"
  },

  "engineStrict": true,

  "engines": {
    "node": ">= 6.0.0"
  },

  "build": {
    "appId": "io.ev.playmaster",
    "app-category-type": "entertainment.utilities.games",
    "win": {
      "iconUrl": "http://eatodo.s3.amazonaws.com/icon.ico"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "dist": "NODE_ENV=production build -m --x64",
    "win-dist": "build -w --x64",
    "start": "babel-node scripts/ development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolition/playmaster.git"
  },
  "bugs": {
    "url": "https://github.com/evolition/playmaster/issues"
  },
  "keywords": ["rpg","dnd","game"],
  "author": "Evolition",
  "license": "Apache-2.0",
  "copyright": "Copyright (c) 2016, Evolition, LLC. All rights reserved.",
  "homepage": "https://github.com/evolition/playmaster#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2017": "^1.6.1",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.14.0",
    "electron-builder": "^6.6.1",
    "electron-compilers": "^3.1.6",
    "electron-prebuilt": "^1.3.5",
    "eslint": "^3.2.2",
    "spectron": "^3.3.0"
  }
}
